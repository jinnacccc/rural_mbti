      ESTP: { name: 'í˜„ì‹¤í˜• ë†ì´Œì§€ë„ì‚¬', description: 'ì¦‰ê°ì ì´ê³  ì‹¤ìš©ì ì¸ ë¬¸ì œ í•´ê²°', characteristics: ['í˜„ì¥ ìƒí™©ì— ë§ëŠ” ìœ ì—°í•œ ëŒ€ì‘', 'ë†ë¯¼ë“¤ê³¼ì˜ ìì—°ìŠ¤ëŸ¬ìš´ ì†Œí†µ', 'ì‹¤ì œ ì²´í—˜ ì¤‘ì‹¬ì˜ ê¸°ìˆ  ì „ìˆ˜', 'ì‹¤ìš©ì ì´ê³  ì¦‰ê°ì ì¸ ë¬¸ì œ í•´ê²°'], color: 'bg-orange-500' },
      ENFP: { name: 'ì—´ì •í˜• ë†ì´Œì§€ë„ì‚¬', description: 'ì°½ì˜ì ì´ê³  ë‹¤ì–‘í•œ ë†ì—… ì•„ì´ë””ì–´ ì œê³µ', characteristics: ['ë†ë¯¼ë“¤ì˜ ìƒˆë¡œìš´ ë„ì „ ì˜ìš• ê³ ì·¨', 'ë„¤íŠ¸ì›Œí‚¹ì„ í†µí•œ ë†ì—… ì •ë³´ ê³µìœ  í™œì„±í™”', 'ë†ì´Œ ê´€ê´‘ê³¼ 6ì°¨ ì‚°ì—… ë°œì „ ê¸°ì—¬', 'ì°½ì˜ì  ì•„ì´ë””ì–´ì™€ ì—´ì •ì  ì¶”ì§„ë ¥'], color: 'bg-pink-500' },
      ENTP: { name: 'ì°½ì˜í˜• ë†ì´Œì§€ë„ì‚¬', description: 'ë†ì—… í˜„ì¥ì˜ í˜ì‹ ì  ë³€í™” ì£¼ë„', characteristics: ['ìƒˆë¡œìš´ ë†ì—… ê¸°ìˆ ê³¼ ëª¨ë¸ ê°œë°œ', 'ë†ë¯¼ë“¤ì˜ ì°½ì˜ì  ì‚¬ê³  ìê·¹', 'ë†ì—…ê³¼ íƒ€ ì‚°ì—…ì˜ ìœµí•© ëª¨ë¸ ì œì‹œ', 'í˜ì‹ ì  ì•„ì´ë””ì–´ì™€ ì°½ì˜ì  ì ‘ê·¼'], color: 'bg-violet-500' },
      ISFP: { name: 'í˜‘ë ¥í˜• ë†ì´Œì§€ë„ì‚¬', description: 'ë†ë¯¼ ê°œê°œì¸ì˜ ê°œì„±ê³¼ ìƒí™© ì¡´ì¤‘', characteristics: ['ìì—°ì¹œí™”ì  ë†ì—… ë°©ë²• ì¶”êµ¬', 'ì¡°ìš©í•˜ì§€ë§Œ ê¹Šì´ ìˆëŠ” ê¸°ìˆ  ì§€ë„', 'ë†ì´Œì˜ ìì—°í™˜ê²½ ë³´ì „ ì¤‘ì‹œ', 'ê°œì¸ì˜ ê°€ì¹˜ì™€ ììœ¨ì„± ì¡´ì¤‘'], color: 'bg-emerald-500' },
      ISTP: { name: 'ê¸°ìˆ í˜• ë†ì´Œì§€ë„ì‚¬', description: 'ì‹¤ìš©ì ì´ê³  íš¨ê³¼ì ì¸ ë†ì—… ê¸°ìˆ  ì „ë¬¸ê°€', characteristics: ['ë†ê¸°ê³„ì™€ ì‹œì„¤ ìš´ì˜ ê¸°ìˆ  ì§€ë„', 'ë¬¸ì œ ë°œìƒ ì‹œ ì‹ ì†í•œ ê¸°ìˆ ì  í•´ê²°', 'ë†ë¯¼ë“¤ì˜ ì‹¤ì§ˆì  ê¸°ìˆ  íŒŒíŠ¸ë„ˆ', 'ì‹¤ìš©ì  ê¸°ìˆ ê³¼ íš¨ìœ¨ì  ë¬¸ì œ í•´ê²°'], color: 'bg-gray-600' },
      INFP: { name: 'ê°€ì¹˜í˜• ë†ì´Œì§€ë„ì‚¬', description: 'ë†ì´Œì˜ ê°€ì¹˜ì™€ ì˜ë¯¸ë¥¼ ì¤‘ì‹œí•˜ëŠ” ì§€ë„', characteristics: ['ë†ë¯¼ ê°œê°œì¸ì˜ ê°€ì¹˜ê´€ê³¼ ëª©í‘œ ì¡´ì¤‘', 'ì§€ì†ê°€ëŠ¥í•˜ê³  ì¹œí™˜ê²½ì  ë†ì—… ì¶”êµ¬', 'ë†ì´Œ ê³µë™ì²´ì˜ ì •ì‹ ì  ê°€ì¹˜ ì¦ì§„', 'ì§„ì •ì„± ìˆëŠ” ê°€ì¹˜ ì¶”êµ¬ì™€ ì˜ë¯¸ ìˆëŠ” ë³€í™”'], color: 'bg-rose-500' },
      INTP: { name: 'ë¶„ì„í˜• ë†ì´Œì§€ë„ì‚¬', description: 'ë†ì—… í˜„ìƒì— ëŒ€í•œ ê¹Šì´ ìˆëŠ” ë¶„ì„ê³¼ ì—°êµ¬', characteristics: ['ë…¼ë¦¬ì ì´ê³  ì²´ê³„ì ì¸ ë¬¸ì œ í•´ê²° ì ‘ê·¼', 'ìƒˆë¡œìš´ ë†ì—… ì´ë¡ ê³¼ ê¸°ìˆ  ê°œë°œ', 'ë†ì—… ê³¼í•™ì˜ ì´ë¡ ì  í† ëŒ€ ì œê³µ', 'ë¶„ì„ì  ì‚¬ê³ ì™€ í˜ì‹ ì  ì—°êµ¬'], color: 'bg-lime-600' }
    };

    //ï¸âƒ£ ë Œë” í•¨ìˆ˜
    const render = () => {
      app.innerHTML = '';
      if (state.showNameInput) {
        app.innerHTML = `
          <div class="text-center mb-6">
            <div class="mx-auto h-16 w-16 text-green-600 mb-4">ğŸ‘¤</div>
            <h1 class="text-2xl font-bold text-gray-800 mb-2">ë†ì´Œì§€ë„ì‚¬í˜•</h1>
            <h2 class="text-xl font-semibold text-gray-700 mb-4">ì„±ê²©ìœ í˜• ì§„ë‹¨</h2>
            <p class="text-gray-600 text-sm">MBTI ì„±ê²©ìœ í˜•ê³¼ ë†ì´Œì§€ë„ì‚¬ì˜ ì£¼ìš” ì—…ë¬´ íŠ¹ì„±ì„ ê²°í•©í•œ ì§„ë‹¨ì…ë‹ˆë‹¤</p>
          </div>
          <div class="space-y-4">
            <div><label class="block text-sm font-medium text-gray-700 mb-2">ì„±í•¨ì„ ì…ë ¥í•´ì£¼ì„¸ìš”</label><input type="text" id="nameInput" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-green-500" placeholder="ì´ë¦„ì„ ì…ë ¥í•˜ì„¸ìš”"/></div>
            <button id="startBtn" class="w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition-colors">ì§„ë‹¨ ì‹œì‘í•˜ê¸°</button>
          </div>`;
        document.getElementById('startBtn').onclick = () => {
          const val = document.getElementById('nameInput').value.trim();
          if (val) { state.userName = val; state.showNameInput = false; render(); }
        };
        return;
      }

      if (state.showResult) {
        const t = mbtiTypes[state.mbtiResult];
        app.innerHTML = `
          <div class="bg-white rounded-lg shadow-xl overflow-hidden">
            <div class="${t.color} text-white p-6"><div class="flex justify-between"><div><h1 class="text-3xl font-bold mb-2">${t.name}</h1><p class="text-xl opacity-90">${state.mbtiResult} ìœ í˜•</p></div><div class="text-right text-sm"><div>ğŸ‘¤ ${state.userName}</div><div>ğŸ“… ${new Date().toLocaleDateString('ko-KR')}</div></div></div></div>
            <div class="p-6"><h2 class="text-2xl font-semibold text-gray-800 mb-3">ìœ í˜• íŠ¹ì„±</h2><p class="text-lg text-gray-700 mb-4">${t.description}</p><ul class="mb-6">${t.characteristics.map(c => `<li class="flex items-start"><div class="w-2 h-2 ${t.color} rounded-full mt-2 mr-3"></div><span>${c}</span></li>`).join('')}</ul><div class="flex gap-2"><button id="downloadBtn" class="bg-blue-600 text-white py-2 px-4 rounded hover:bg-blue-700">ê²°ê³¼ ë‹¤ìš´ë¡œë“œ</button><button id="resetBtn" class="bg-gray-600 text-white py-2 px-4 rounded hover:bg-gray-700">ë‹¤ì‹œ ì§„ë‹¨í•˜ê¸°</button></div></div>
          </div>`;
        document.getElementById('downloadBtn').onclick = () => {
          const data = { name: state.userName, date: new Date().toLocaleDateString('ko-KR'), mbtiType: state.mbtiResult, typeInfo: t, answers: state.answers };
          const blob = new Blob([JSON.stringify(data, null, 2)], { type: 'application/json' });
          const url = URL.createObjectURL(blob);
          const a = document.createElement('a');
          a.href = url;
          a.download = `ë†ì´Œì§€ë„ì‚¬í˜•_ì§„ë‹¨ê²°ê³¼_${state.userName.replace(/[^\wê°€-í£]/g,'')}_${new Date().toISOString().split('T')[0]}.json`;
          a.click();
        };
        document.getElementById('resetBtn').onclick = () => {
          Object.assign(state, { currentQuestion:0, answers:{}, showResult:false, mbtiResult:'', userName:'', showNameInput:true });
          render();
        };
        return;
      }

      const q = questions[state.currentQuestion];
      app.innerHTML = `
        <div class="mb-6"><div class="flex justify-between text-sm text-gray-700 mb-1"><span>ì§„í–‰ë¥ : ${state.currentQuestion+1} / ${questions.length}</span><span>${q.category}</span></div><div class="w-full bg-gray-200 rounded-full h-2"><div class="bg-green-600 h-2 rounded-full" style="width:${Math.round((state.currentQuestion+1)/questions.length*100)}%"></div></div></div>
        <div class="mb-4"><h2 class="text-xl font-semibold mb-4">${q.question}</h2>${q.options.map((o,i)=>`<button class="w-full text-left p-4 border rounded mb-2 hover:border-green-500 hover:bg-green-50" data-key="${o.key}"><div class="flex"><div class="w-6 h-6 bg-gray-100 rounded-full flex items-center justify-center mr-2">${i?"B":"A"}</div>${o.text}</div></button>`).join('')}</div>
        <div class="flex justify-between"><button id="prevBtn" class="text-gray-600 hover:text-gray-800" ${state.currentQuestion===0?'disabled':''}>â¬… ì´ì „</button><span class="text-sm text-gray-500">ë‹µë³€ ì™„ë£Œ: ${Object.keys(state.answers).length} / ${questions.length}</span></div>`;
      document.querySelectorAll('[data-key]').forEach(b=>b.onclick= e=>{
        state.answers[state.currentQuestion] = e.currentTarget.getAttribute('data-key');
        if (state.currentQuestion < questions.length-1) state.currentQuestion++; else calcResult();
        render();
      });
      document.getElementById('prevBtn').onclick = () => { if(state.currentQuestion>0){state.currentQuestion--; render();} };
    };

    //ï¸âƒ£ ê²°ê³¼ ê³„ì‚°
    const calcResult = () => {
      const s = {E:0,I:0,S:0,N:0,T:0,F:0,J:0,P:0};
      Object.values(state.answers).forEach(a=>s[a]++);
      state.mbtiResult = (s.E>=s.I?'E':'I')+(s.S>=s.N?'S':'N')+(s.T>=s.F?'T':'F')+(s.J>=s.P?'J':'P');
      state.showResult = true;
      render();
    };

    //ï¸âƒ£ ìµœì´ˆ ì‹¤í–‰
    render();
  </script>
